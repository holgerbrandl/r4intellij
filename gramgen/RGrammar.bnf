	elementTypePrefix="R_"
	elementTypeClass="com.r4intellij.psi.RCompositeElementType"
	tokenTypeClass="com.r4intellij.lang.lexer.RTokenType"


	tokens = [
			// tokens as defined in original_r_grammar.y
