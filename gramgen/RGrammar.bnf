			RIGHT_ASSIGN="->"
			GLOBAL_LEFT_ASSIGN="<<-"
			GLOBAL_RIGHT_ASSIGN="->>"
			LBB="[["
			RBB="]]"
			// onthefly FOR
			// onthefly IN
			// onthefly IF
			// onthefly ELSE
			// onthefly WHILE
			// onthefly NEXT
			// onthefly BREAK
			// onthefly REPEAT
			GT=">"
			GE=">="
			LT="<"
			LE="<="
			EQ="=="
			NE="!="
			AND="&"
			OR="|"
			AND2="&&"
			OR2="||"
			NS_GET="::"
			NS_GET_INT=":::"
			// onthefly COMMENT
			// onthefly SPACES
			// onthefly ROXYGEN_COMMENT
			SYMBOL_FORMALS="..."
